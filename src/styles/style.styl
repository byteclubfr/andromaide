* {
	box-sizing: border-box;
}

body {
	background: white;
	color: #333;
	font-family: sans-serif;
	margin: 0 auto;
	width: 60%;
}

button {
	background: #ddd;
	border: 1px solid #999;
	cursor: pointer;
	padding: 0.5em;
}

button:hover {
	background: #ccc;
}

button:disabled {
	color: #999;
	cursor: not-allowed;
}

textarea {
	border: 1px solid #666;
	display: block;
	height: 4em;
	width: 100%;
}

.steps {
	list-style: none;
	padding: 0;
}

.step {
	margin: 1em 0;
}

.step:hover {
	background: #eee;
}

.step-remove {
	float: right;
}

.step-title {
	color: #666;
	text-align: right;
}

.step-cbs {
	display: flex;
}

.step-cb {
	width: 50%;
}

.step-catch .step-cb {
	margin-left: 50%;
}

/* green */
.fulfilled,
.resolve,
.on-success,
.add-then1 {
	color: #090;
}

/* red */
.rejected,
.reject,
.on-error,
.add-catch {
	color: #900;
}

/* buttons */

.resolve,
.add-then1 {
	width: 50%;
}

.add-then2 {
	width: 100%;
}

.reject,
.add-catch {
	width: 50%;
}
